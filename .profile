# shortcut for Laravels artisan CLI
alias partisan="php artisan"

# I do a lot of web development, so I need to edit these non-owned files fairly often
alias edit_hosts='sudo nano /etc/hosts'
alias edit_httpd='sudo nano /etc/apache2/httpd.conf'
alias edit_php='sudo nano /etc/php.ini'
alias edit_vhosts='sudo nano /etc/apache2/extra/httpd-vhosts.conf'

# Kill all DS_STORE files
alias killDS="find . -name *.DS_STORE -type f -delete"

# Quickly reload profile
alias reload_profile=". ~/.profile"
